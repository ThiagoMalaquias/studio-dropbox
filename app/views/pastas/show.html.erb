<div class="container">
  <% if @pasta.origem_id.present?%>
    <a href="/pastas/<%= @pasta.origem_id%>">Voltar</a>
  <% else %>
    <a href="/">Voltar</a>
  <% end %>
</div>
<div class="section-title">
  <h2><%= @pasta.nome %></h2>
</div>
<div class="container">
  <div class="row">
    <% @pastas.each do |pasta| %>
      <div class="col-md-2 mb-3">
        <% if pasta.link.present? %>
          <a href="<%= pasta.link %>" target="_blank">
          <% else %>
            <a href="/pastas/<%= pasta.id %>">
            <% end %>
            <div class="info-box">
              <i class="bx bx-folder"></i>
              <p><%= pasta.nome %></p>
            </div>
          </a>
        </div>
      <% end %>
      <% @midias.each do |midia| %>
        <div class="col-md-2 mb-3">
          <div data-controller="arquivos" data-arquivos-id-value="<%= midia.id %>" data-action="click->arquivos#abrirArquivo">
            <div class="info-box">
              <p><%= midia.arquivo.filename %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
