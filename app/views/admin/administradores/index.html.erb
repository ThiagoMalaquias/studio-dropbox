<div class="container mt-5 mb-3">
  <div class="row">
    <div class="col">
      <h1>Administradores</h1>
    </div>
    <div class="col text-end">
      <%= link_to "Novo Administrador", new_admin_administrador_path, class: "btn btn-primary" %>
    </div>
  </div>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @administradores.each do |administrador| %>
        <tr>
          <td><%= administrador.nome%></td>
          <td><%= administrador.email%></td>
          <td>
            <div class="d-flex justify-content-end">
              <%= link_to "Mostrar", admin_administrador_path(administrador), class: "btn btn-primary me-2" %>
              <%= link_to "Editar", edit_admin_administrador_path(administrador), class: "btn btn-warning me-2" %>
              <%= button_to "Apagar", admin_administrador_path(administrador), method: :delete, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
